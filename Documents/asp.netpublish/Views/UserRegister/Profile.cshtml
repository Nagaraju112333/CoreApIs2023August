@model ArchentsIT.Models.UserRegister
@{
    ViewBag.Title = "Profile";
    Layout = "~/Views/Shared/ArchentsIT.cshtml";
}

<html>
<head>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.3/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.20/css/jquery.dataTables.min.css" />
    <script type="text/javascript" src="https://cdn.datatables.net/1.10.20/js/jquery.dataTables.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
    <script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>
    <link href="~/CSS/Profile.css" rel="stylesheet" />
</head>
<body>
    <div class="container">
       
        @using (Html.BeginForm("Profile", "UserRegister", FormMethod.Post))
        {
          <div class="MainDiv">
              <h4 style="color:#7f7278">Profile Update</h4>
              <div class="form-group">
                  <label>First Name</label>
                  <input type="text" name="FirstName" value="@Model.FirstName" class="form-control w-25" />
              </div>
              <div class="form-group">
                  <label>last Name</label>
                  <input type="text" name="LastName" value="@Model.LastName" class="form-control w-25" />
              </div>
              <div class="form-group">
                  <label>Email</label>
                  <input type="text" name="Email" value="@Model.Email" class="form-control w-25" readonly />
              </div>
              <div class="form-group">
                  <label>Designation</label>
                  <input type="text" name="Designation" value="@Model.Designation" class="form-control w-25" />
              </div>
              <div class="form-group">
                  <label>Phone Number</label>
                  <input type="text" name="Phone_Number" value="@Model.Phone_Number" class="form-control w-25" />
              </div>
              <div class="form-group">
                  <input type="text" name="EmpID" value="@Model.EmpID" class="form-control w-25" hidden />
              </div>
              <div class="form-group" style="display:flex">
                  <div>
                      <input type="submit" value="Update" class="btn btn-success " style="width:90px; border-radius:20px" />
                  </div>
                  @if (@Model.RoleType == 1)
                  {
                      <div>
                          <a href="~/Admin/Getallemployees" style="margin-left:206px; width:90px; border-radius:20px;" class="btn btn-primary">Back</a>
                      </div>
                  }
                  else
                  {
                      <div>
                          <a href="~/UserRegister/GetEmployeeRecords" style="margin-left: 206px;width:90px; border-radius:20px;" class="btn btn-primary">Back</a>
                      </div>
                  }

              </div>
          </div>
        }
    </div>
</body>
</html>

