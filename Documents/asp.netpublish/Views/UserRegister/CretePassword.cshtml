@model  ArchentsIT.Models.CreatePassword
@{
    ViewBag.Title = "CretePassword";
    Layout = "~/Views/Shared/ArchentsIT.cshtml";
}
<html>
<head>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.3.0/css/all.min.css/">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <meta name="viewport" content="width=device-width" />
    <title>ForgotPassword</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

    <!-- jQuery library -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>

    <!-- Latest compiled JavaScript -->
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
    <link href="~/CSS/CreatePassword.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Scripts/jquery-3.4.1.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script type="text/javascript">

        $(document).ready(function () {
            Clientvalidation();
        });
        function Clientvalidation() {
            $("#formregister").validate({
                rules: {
                    'NewPassword': {
                        required: true,
                        minlength: 6
                        
                    }, 
                    'ConfirmPassword': {
                        required: true,
                        equalTo: '#NewPassword'
                    }
                },
                messages: {
                    'NewPassword': {
                        required: 'Password is required',
                        minlength:'minimum length of password is 6'
                        
                    },
                    'ConfirmPassword': {
                        required: 'Confirm password is required',
                        equalTo:'Password And confirm password should be same'
                    }
                }
            });
        }
    </script>

</head>
<body>
    <div class="container">
      
        <div class="main1">

            <div class="forgotpassword">
            </div>
            @using (Html.BeginForm("CretePassword", "UserRegister", FormMethod.Post,htmlAttributes:new {@id= "formregister" }))
            {
              
        <div class="form-horizontal">
         
            <p style="">Create New Password</p>
            <div class="text-success">
                @ViewBag.Message
            </div>
            <div class="form-group">
                <label class="control-label col-md-2">Password</label>

                @Html.Password("NewPassword", "", new { @class = "form-control w-50" })

             
            </div>
            <div class="form-group" style="position:relative">
                <label class="control-label col-md-2">Confirm Password</label>
               
                <div >
                    <input type="password" name="ConfirmPassword" id="password" class="form-control w-50" placeholder=" Confirm Password" AutoCompleteType="current-password" />
                    <i class="bi bi-eye-slash" id="togglePassword" style="position:absolute"></i>
                </div>
                @Html.ValidationMessageFor(model => model.ConfirmPassword, "", new { @class = "text-danger" })

            </div>
            <div class="form-group" style="margin-top:20px;">
                <div class="form-group">
                    <input type="submit" value="Create Password" class=" form-control  w-50" id="btn1" />
                   @* <a href="" class="" style="margin-top:10px;border-radius:20px">Go To Login</a>*@
                </div>
            </div>
            
        </div>
            }
        </div>
    </div>
    <script type="text/javascript">
        const togglePassword = document.querySelector('#togglePassword');
        const password = document.querySelector('#password');
        togglePassword.addEventListener('click', function (e) {
            // toggle the type attribute
            const type = password.getAttribute('type') === 'password' ? 'text' : 'password';
            password.setAttribute('type', type);
            // toggle the eye / eye slash icon
            this.classList.toggle('bi-eye');
        });
    </script>
    </script>
</body>
</html>

