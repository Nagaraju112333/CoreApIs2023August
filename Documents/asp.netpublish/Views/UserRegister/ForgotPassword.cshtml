@model  ArchentsIT.Models.ForgotPassword
@{
    ViewBag.Title = "ForgotPassword";
    Layout = "~/Views/Shared/ArchentsIT.cshtml";
}

<html>
<head>

    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Scripts/jquery-3.4.1.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>

    <script src="https://code.jquery.com/jquery-3.6.4.js" integrity="sha256-a9jBBRygX1Bh5lt8GZjXDzyOB+bWve9EiO7tROUtj/E=" crossorigin="anonymous"></script>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.3/jquery.min.js"></script>
    <meta name="viewport" content="width=device-width" />
    <title>ForgotPassword</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

    <!-- jQuery library -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="jquery-3.6.3.min.js"></script>
    <!-- Latest compiled JavaScript -->
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>

    <style>
        .main1 {
            margin-left: 300px;
            margin-top: 150px;
        }

            .main1 p {
                font-size: 2vw;
            }

        #btn1 {
            border-radius: 20px;
            color: white;
            background-color: black;
        }

        #emailormobilenumber {
            font-weight: 800;
        }

        #message {
            font-size: 1em;
        }
        .error{
            color:red;
        }
    </style>
    <script type="text/javascript">

        $(document).ready(function () {
            Clientvalidation();
        });
        function Clientvalidation() {
            $("#formregister").validate({
                rules: {
                    'MobileNumberAndEmail': {
                        required: true,
                        email:true
                    },
                },
                messages: {
                    'MobileNumberAndEmail': {
                        required: 'Email is required',
                        email:"Enter Valid Email Address"
                    }
                }
            });
        }
    </script>
</head>
<body>
    <div class="container">
       
        <div class="main1">
            <p style="">Forgot Password</p>
          @*  <p style="color:red" id="message">@ViewBag.message</p>*@
        <div class="forgotpassword">
            @using (Html.BeginForm("ForgotPassword", "UserRegister", FormMethod.Post, htmlAttributes:new {@id= "formregister" }))
            {
                HtmlHelper.UnobtrusiveJavaScriptEnabled = false;

                @Html.AntiForgeryToken()
            <div class="form-horizontal">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="text-danger">
                    @ViewBag.Message
                </div>
                <div class="form-group">
                    <label class="control-label col-md-2" id="emailormobilenumber">Email</label>
                    @Html.TextBoxFor(model => model.MobileNumberAndEmail, "", new { @class = "form-control w-50",@placeholder="Enter Email" })
                   @* @Html.ValidationMessageFor(model => model.MobileNumberAndEmail, "", new { @class = "text-danger" })*@
                    @*  @Html.TextBox("EmailID", "", new { @class = "form-control w-50" })*@
                </div>
                <div class="form-group" style="margin-top:20px; display:flex">
                    <div class="form-group">
                        <input type="submit" value="Send" class="" id="btn1" style="border-radius:5px;width:100px;border-radius:20px;height:36px; " />
                    </div>
                    <div>
                        <a style="border-radius:5px;width:100px;height:36px;border-radius:20px;margin-left:300px;" href="~/UserRegister/Login" class="btn btn-success">Back</a>
                    </div>
                </div>
            </div>
            }
        </div>
        </div>
    </div>
</body>
</html>

